{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "rootDir": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "removeComments": true,
    "types": [
      "node",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "src/types/environment.d.ts",
    "src/chain/constants",
    "./jest.config.ts"
  ],
  "ts-node": {
    "swc": true,
    "esm": true,
    "transpileOnly": true,
    "require": [
      "tsconfig-paths/register"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}