{
	"name": "api",
	"version": "0.0.2",
	"scripts": {
		"prebuild": "rm -rf dist",
		"build": "tsup --config='tsup.config.ts'",
		"dev": "./node_modules/.bin/bun --hot src/index.ts",
		"start": "./node_modules/.bin/bun --hot dist/index.mjs",
		"lint": "eslint --fix . --ext='js,cjs,mjs,ts,cts,mts,d.ts,json,md' --ignore-path .gitignore --ignore-path .eslintignore --cache",
		"format": "prettier . --write './**/*.{js,cjs,mjs,ts,tsx,json,md,toml}' --ignore-path .gitignore --ignore-path .eslintignore --ignore-unknown --cache",
		"typecheck": "tsc --noEmit",
		"docker-local": "/bin/bash ./scripts/local-docker.sh",
		"clean": "rm -rf .turbo dist"
	},
	"dependencies": {
		"hono": "^3.2.5",
		"viem": "^1.0.2"
	},
	"devDependencies": {
		"@hono/sentry": "^0.2.1",
		"@types/eslint": "^8.40.1",
		"@types/node": "^20.2.6",
		"@types/prettier": "^2.7.3",
		"bun": "^0.6.8",
		"dotenv": "^16.1.4",
		"eslint": "8.42.0",
		"eslint-config-base": "workspace:*",
		"prettier": "^2.8.8",
		"prettier-plugin-toml": "^0.3.1",
		"tsconfig": "workspace:*",
		"tsup": "^6.7.0",
		"typescript": "^5.1.3"
	},
	"private": true
}
