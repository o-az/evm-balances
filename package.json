{
	"name": "root",
	"version": "0.0.2",
	"description": "Smart contract and REST API for getting multiple EVM balances",
	"author": "github@omaraziz.dev",
	"repository": "o-az:evm-balances-api",
	"license": "GPL-3.0-only",
	"type": "module",
	
	"scripts": {
		"format": "turbo run format && prettier . --write './**/*.{js,cjs,mjs,jsx,ts,cts,mts,tsx,json,md,sol}' --ignore-path .gitignore --ignore-path .eslintignore --ignore-unknown",
		"lint": "eslint --fix . --ext='js,cjs,mjs,ts,cts,mts,d.ts,json,md' --ignore-path .gitignore --ignore-path .eslintignore --cache",
		"typecheck": "turbo run typecheck && tsc --noEmit",
		"clean": "/bin/bash ./scripts/clean.sh"
	},
	"devDependencies": {
		"@turbo/gen": "^1.10.2",
		"@types/eslint": "^8.40.1",
		"@types/node": "^20.2.5",
		"@types/prettier": "^2.7.3",
		"bun": "^0.6.7",
		"bun-types": "^0.6.7",
		"dotenv": "^16.1.4",
		"eslint": "8.42.0",
		"eslint-config-base": "workspace:*",
		"prettier": "^2.8.8",
		"tsconfig": "workspace:*",
		"turbo": "^1.10.2",
		"typescript": "^5.1.3"
	},
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": "18.16.0",
		"pnpm": ">=8.6.0",
		"npm": "use-pnpm",
		"yarn": "use-pnpm"
	}
}
