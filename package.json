{
	"name": "root",
	"version": "0.0.2",
	"description": "Smart contract and REST API for getting multiple EVM balances",
	"repository": "o-az:evm-balances",
	"license": "GPL-3.0-only",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --no-cache --continue",
		"start": "turbo run start",
		"lint": "turbo run lint && eslint --fix . --ext='js,cjs,mjs,ts,d.ts,json' --ignore-pattern 'packages/' --ignore-pattern 'apps/' --cache",
		"format": "turbo run format && prettier . --write './**/*.{js,cjs,mjs,jsx,ts,d.ts,json,md,sh}' --ignore-path .gitignore --ignore-path .eslintignore --ignore-unknown --cache",
		"typecheck": "turbo run typecheck && tsc --noEmit",
		"release": "bumpp package.json packages/*/package.json apps/*/package.json hasura/package.json --commit --push --tag",
		"clean": "/bin/bash ./scripts/clean.sh",
		"preinstall": "npx only-allow pnpm"
	},
	"devDependencies": {
		"@turbo/gen": "^1.10.3",
		"@types/eslint": "^8.40.1",
		"@types/node": "^20.2.6",
		"@types/prettier": "^2.7.3",
		"bumpp": "^9.1.1",
		"bun": "^0.6.8",
		"bun-types": "^0.6.8",
		"eslint": "8.42.0",
		"eslint-config-base": "workspace:*",
		"prettier": "^2.8.8",
		"prettier-plugin-sh": "^0.12.8",
		"tsconfig": "workspace:*",
		"turbo": "^1.10.3",
		"typescript": "^5.1.3"
	},
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": "18.16.0",
		"pnpm": ">=8.6.0",
		"npm": "use-pnpm",
		"yarn": "use-pnpm"
	},
	"author": "github@omaraziz.dev",
	"bugs": "github:o-az/evm-balances/issues",
	"homepage": "github:o-az/evm-balances/README.md"
}
