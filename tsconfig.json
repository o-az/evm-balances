{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "removeComments": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".scratch", "src/tests"],
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
